<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@drawable/popup_round"
    tools:context=".OcrActivity">

    <LinearLayout
        android:id="@+id/image_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <!--note 타이틀-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:gravity="right|center">

            <Button
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:background="@drawable/button_round"
                android:text="재촬영"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">
            <!--note 가게명-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="16sp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="원마트"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <!--note 날짜(년도)-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:text="2021년"
                    />
                <!--note 날짜(월/일/요일)-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:text="3월 19일 금요일"/>

         </LinearLayout>


        </LinearLayout>

        <!--note 품목-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:background="@drawable/shadow"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:gravity="center_vertical"
                android:text="품목" />

            <View style="@style/Line_width" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:paddingLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="단가" />

                <View style="@style/Line_height" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:paddingLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="수량" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="right|center_vertical"
            android:paddingRight="20dp"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="@color/purple_500"
            android:text="금액"/>

        <!--<com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textView_ocr_result"
            android:layout_width="306dp"
            android:layout_height="242dp"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/btn_ocr_translate"
            app:layout_constraintStart_toStartOf="@+id/btn_ocr_translate"
            app:layout_constraintTop_toBottomOf="@+id/btn_ocr_translate" />-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_ocr_result"
            android:text="test"/>

        <!-- 닫기 버튼 -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:text="취소"
                android:textSize="15sp"
                android:textColor="@color/purple_700"
                android:padding="16dp"
                android:gravity="center"
                android:background="#00000000"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:onClick="mOnClose"
                tools:ignore="OnClick" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>